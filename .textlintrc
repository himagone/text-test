{
    "rules": {
        "preset-jtf-style": true,
        "preset-ja-technical-writing": {
          "no-mix-dearu-desumasu": {
            "preferInHeader": "",
            "preferInBody": "ですます",
            "preferInList": "である",
            "strict": false
          },
          "ja-no-weak-phrase": true,
          "no-unmatched-pair": true,
          "no-doubled-conjunction": true,
          "no-doubled-joshi": {
            "min_interval": 1
          },
          "ja-no-abusage": true
        }
    }
}